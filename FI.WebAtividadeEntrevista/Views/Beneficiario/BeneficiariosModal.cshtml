@model WebAtividadeEntrevista.Models.ListBeneficiarioModel

<div id="BeneficiarioModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Beneficiario</h4>
            </div>
            <div class="modal-body">
                <form id="formBeneficiario" method="post">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="CPF">CPF:</label>
                                <input required="required" type="text" class="form-control" id="CPF" name="CPF" placeholder="Ex.: 999.999.999-99" maxlength="14">
                            </div>
                        </div>

                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="Nome">Nome:</label>
                                <input required="required" type="text" class="form-control" id="Nome" name="Nome" placeholder="Ex.: João" maxlength="50">
                            </div>
                        </div>

                        <div class="col-md-2 fixed-bottom">
                            <div class="form-group">
                                <label>&nbsp;&nbsp;</label>
                                <button type="button" class="btn btn-sm btn-success" id="IncluirBeneficiarioBtn">Incluir</button>
                                <button type="button" class="btn btn-sm btn-warning" id="SalvarBeneficiarioBtn" style="display:none;">Salvar</button>
                            </div>
                        </div>
                    </div>
                </form>
                <div>
                    <table class="table" id="TabelaBeneficiarios">
                        <thead>
                            <tr>
                                <th>CPF</th>
                                <th>Nome</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var beneficiario in Model.Beneficiarios)
                            {
                                <tr beneficiarioId="@beneficiario.Id">
                                    <td>@beneficiario.CPF</td>
                                    <td>@beneficiario.Nome</td>
                                    <td>
                                        <button type="button" class="btn btn-primary btn-sm" onclick="editarBeneficiario(this)">Alterar</button>
                                        <button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">Excluir</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>